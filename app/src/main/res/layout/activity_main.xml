<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adsamcik.touchareatest.MainActivity">

    <View
        android:layout_width="192dp"
        android:layout_height="112dp"
        android:background="@color/colorAccent"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/extended_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"/>

    <View
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/extended_button"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:id="@+id/obscured_view"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:layout_marginBottom="68dp"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/obscuring_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:text="Obscured view"
        android:translationZ="5dp"
        android:layout_margin="-1dp"
        app:layout_constraintBottom_toBottomOf="@id/obscured_view"
        app:layout_constraintEnd_toEndOf="@id/obscured_view"
        app:layout_constraintStart_toStartOf="@id/obscured_view"
        app:layout_constraintTop_toTopOf="@id/obscured_view"/>

</android.support.constraint.ConstraintLayout>
